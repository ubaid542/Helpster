<div>
    <nav class="bg-white border-b border-gray-200">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
            <!-- Logo -->
            <%= link_to root_path, class: "flex items-center space-x-2 " do %>
                <h1 class="text-2xl font-bold text-gray-900">Helpster</h1>
            <% end %>
            
            <!-- Navigation Links -->
            <div class="hidden md:flex items-center space-x-8">
            <%= link_to "View All Users", all_users_path %>
            <% if current_user.nil? || current_user.type != "ServiceProvider" %>
            <%= link_to "Browse Services", categories_path %>          
            
            <% end %>
            <% if current_user.nil? || current_user.type != "ServiceProvider" %>
                <%= link_to "Join as Pro", new_user_registration_path(type: "ServiceProvider"),  
                class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md font-medium transition-colors",
                data: { turbo_frame: "signup_section" } %>
            <% else %>
                <%= link_to "Add Services", create_services_path,  
                class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md font-medium transition-colors",
                data: { turbo_frame: "_top" } %>
            <% end %>
                
                <% if user_signed_in? %>
                    <!-- Message/Notification Icon -->
                    <div class="relative">
                        <button class="text-gray-600 hover:text-gray-900 p-2 relative" onclick="toggleNotifications()">
                            <!-- Bell Icon -->
                            <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-3.5-3.5c-.293-.293-.293-.767 0-1.06L19 10V8a7 7 0 00-14 0v2l2.5 2.44c.293.293.293.767 0 1.06L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/>
                            </svg>
                            <!-- Notification Badge -->
                            <span class="absolute -top-1 -right-1 bg-red-500 text-white text-xs rounded-full h-5 w-5 flex items-center justify-center">3</span>
                        </button>
                        
                        <!-- Dropdown Menu (Hidden by default) -->
                        <div id="notificationDropdown" class="hidden absolute right-0 mt-2 w-80 bg-white rounded-md shadow-lg border border-gray-200 z-50">
                            <div class="p-4 border-b border-gray-200">
                                <h3 class="text-lg font-semibold text-gray-900">Notifications</h3>
                            </div>
                            <div class="max-h-96 overflow-y-auto">
                                <!-- Sample notifications -->
                                <div class="p-4 border-b border-gray-100 hover:bg-gray-50">
                                    <div class="flex items-start space-x-3">
                                        <div class="flex-shrink-0">
                                            <div class="h-8 w-8 bg-blue-500 rounded-full flex items-center justify-center">
                                                <svg class="h-4 w-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                                                    <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                                </svg>
                                            </div>
                                        </div>
                                        <div class="flex-1">
                                            <p class="text-sm font-medium text-gray-900">Booking Confirmed</p>
                                            <p class="text-sm text-gray-500">Your service booking has been confirmed</p>
                                            <p class="text-xs text-gray-400 mt-1">2 hours ago</p>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="p-4 border-b border-gray-100 hover:bg-gray-50">
                                    <div class="flex items-start space-x-3">
                                        <div class="flex-shrink-0">
                                            <div class="h-8 w-8 bg-green-500 rounded-full flex items-center justify-center">
                                                <svg class="h-4 w-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                                                    <path d="M4 4a2 2 0 00-2 2v4a2 2 0 002 2V6h10a2 2 0 00-2-2H4zm2 6a2 2 0 012-2h8a2 2 0 012 2v4a2 2 0 01-2 2H8a2 2 0 01-2-2v-4zm6 4a2 2 0 100-4 2 2 0 000 4z"/>
                                                </svg>
                                            </div>
                                        </div>
                                        <div class="flex-1">
                                            <p class="text-sm font-medium text-gray-900">Payment Successful</p>
                                            <p class="text-sm text-gray-500">Payment of Rs. 1,500 has been processed</p>
                                            <p class="text-xs text-gray-400 mt-1">1 day ago</p>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="p-4 border-b border-gray-100 hover:bg-gray-50">
                                    <div class="flex items-start space-x-3">
                                        <div class="flex-shrink-0">
                                            <div class="h-8 w-8 bg-yellow-500 rounded-full flex items-center justify-center">
                                                <svg class="h-4 w-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                                                    <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                                                </svg>
                                            </div>
                                        </div>
                                        <div class="flex-1">
                                            <p class="text-sm font-medium text-gray-900">Reminder</p>
                                            <p class="text-sm text-gray-500">Service appointment tomorrow at 2:00 PM</p>
                                            <p class="text-xs text-gray-400 mt-1">2 days ago</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="p-4 border-t border-gray-200">
                                <button class="w-full text-center text-sm text-blue-600 hover:text-blue-700 font-medium">
                                    View All Notifications
                                </button>
                            </div>
                        </div>
                    </div>

                    <div class="grid-col-1 text-right space-x-4">
                    <p class="text-gray-700 text-md font-semibold">Welcome, <%= current_user.full_name %></p>
                    <div><%= button_to "Sign Out", destroy_user_session_path, 
                        method: :delete,
                        class: "text-gray-600 text-sm hover:text-gray-900 font-medium bg-transparent border-none cursor-pointer",
                        form: { style: "display: inline;" } %></div>
                    </div>
                <% else %>
                    <%= link_to "Sign In", new_user_session_path, 
                        class: "text-gray-600 hover:text-gray-900 font-medium",
                        data: {turbo_frame: "signup_section"} %>
                <% end %>
            </div>

            <!-- Mobile menu button -->
            <div class="md:hidden">
            <button class="text-gray-600 hover:text-gray-900">
                <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                </svg>
            </button>
            </div>
        </div>
        </div>
    </nav>

    <!-- JavaScript for dropdown toggle -->
    <script>
        function toggleNotifications() {
            const dropdown = document.getElementById('notificationDropdown');
            dropdown.classList.toggle('hidden');
        }

        // Close dropdown when clicking outside
        document.addEventListener('click', function(event) {
            const dropdown = document.getElementById('notificationDropdown');
            const button = event.target.closest('button');
            
            if (!button || button.getAttribute('onclick') !== 'toggleNotifications()') {
                dropdown.classList.add('hidden');
            }
        });
    </script>
</div>