<div class="bg-gray-50 min-h-screen">
  <div class="bg-white shadow-sm">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <div class="flex items-center mb-4">
        <%= link_to category_subcategories_path, class: "text-blue-600 hover:text-blue-700 mr-4" do %>
          ← Back to Services
        <% end %>
      </div>
      <div class="text-center">
        <h1 class="text-4xl font-bold text-gray-900 mb-4"><%= @category_name %> Services</h1>
        <p class="text-xl text-gray-600">Find trusted professionals for <%= @category_name.downcase %> in your area</p>
      </div>
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <% if @services.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% @services.each do |service| %>
          <%= link_to service_path(service), class: "group bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow p-6 border border-gray-200" do %>
            <div class="flex justify-between items-start mb-4">
              <h3 class="text-lg font-semibold text-gray-900 group-hover:text-blue-600"><%= service.name %></h3>
              <span class="text-lg font-bold text-green-600">Rs. <%= service.price %></span>
            </div>
            <p class="text-gray-600 mb-4 line-clamp-3"><%= service.description %></p>
            <div class="border-t pt-4">
              <div class="flex items-center justify-between">
                <div>
                  <p class="text-sm font-medium text-gray-900"><%= service.provider_name %></p>
                  <p class="text-sm text-gray-500"><%= service.location %></p>
                </div>
                <div class="text-blue-600 text-sm font-medium">
                  View Details →
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-12">
        <div class="bg-gray-100 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
        </div>
        <h3 class="text-lg font-medium text-gray-900 mb-2">No services available</h3>
        <p class="text-gray-500">There are currently no <%= @category_name.downcase %> services in this area.</p>
      </div>
    <% end %>
  </div>
</div>