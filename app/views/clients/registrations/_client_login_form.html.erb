<%= form_for(@resource, as: @resource_name, url: session_path(@resource_name)) do |form| %>
  <div class="space-y-5 my-10 px-6 pt-6 pb-2 shadow-xl bg-white rounded-lg border-2 items-center border-blue-500 max-w-md mx-auto">
    
    <h2 class="text-3xl font-bold text-gray-800 text-center">Login</h2>

    <!-- Email -->
    <div>
      <%= form.label :email, class: "block text-md font-semibold text-indigo-600" do %>
        Email Address<span class="text-md text-red-600">*</span>
      <% end %>
      <%= form.email_field :email, autofocus: true, autocomplete: "email",
          class: "mt-1 block w-full px-2 py-1 h-11 rounded-md border-gray-300 
                 focus:bg-blue-100 shadow-md focus:shadow-xl focus:outline-none 
                 ring-1 focus:ring-2 focus:border-blue-500 focus:ring-blue-500 sm:text-md",
          placeholder: "example@gmail.com" %>
    </div>

    <!-- Password -->
    <div>
      <%= form.label :password, class: "block font-semibold text-md text-indigo-600" do %>
        Password<span class="text-md text-red-600">*</span>
      <% end %>
      <%= form.password_field :password, autocomplete: "current-password",
          class: "mt-1 block w-full px-2 py-1 h-11 rounded-md border-gray-300 
                 focus:bg-blue-100 shadow-md focus:shadow-xl focus:outline-none 
                 ring-1 focus:ring-2 focus:border-blue-500 focus:ring-blue-500 sm:text-md" %>
    </div>

    <!-- Submit -->
    <div>
      <%= form.submit "Login",
          class: "w-full py-2 px-4 bg-indigo-600 text-white rounded-md 
                  hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
    </div>

    <!-- Link to Signup -->
    <div class="mt-20 text-right">
      <span class="text-sm">Don't have an account? </span>
      <%= link_to "Sign Up", new_user_registration_path, class: "text-md text-indigo-500 underline" %>
    </div>

  </div>
<% end %>
