<div class="min-h-screen bg-gradient-to-br from-blue-50 via-white to-purple-50">

    
  <!-- Header Section -->
  <div class="bg-white shadow-sm border-b border-gray-200">
  
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="flex items-center mb-4">
        <%= link_to root_path, class: "text-blue-600 text-xl font-bold hover:text-blue-700 mr-4" do %>
          ‚Üê Back
        <% end %>
    </div>
      <div class="text-center">
        <h1 class="text-4xl font-bold text-gray-900 mb-2">Search Results</h1>
        <% if @search_performed %>
          <p class="text-xl text-gray-600">
            <% if @services.any? %>
              Found <span class="font-semibold text-blue-600"><%= pluralize(@total_results, 'service') %></span>
              <% if @query.present? %>for "<span class="font-semibold"><%= @query %></span>"<% end %>
              <% if @location.present? %>in "<span class="font-semibold"><%= @location %></span>"<% end %>
            <% else %>
              <span class="text-gray-500">No services found</span>
              <% if @query.present? %>for "<span class="font-semibold"><%= @query %></span>"<% end %>
              <% if @location.present? %>in "<span class="font-semibold"><%= @location %></span>"<% end %>
            <% end %>
          </p>
        <% end %>
      </div>
    </div>
  </div>

  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    
     <!-- Simple Searchable Dropdown Bar -->
      <div class="max-w-2xl mx-auto mb-12">
        <div class="bg-white rounded-lg shadow-lg p-2">
          <%= form_with url: search_services_path, method: :get, local: true, class: "flex flex-col md:flex-row gap-2" do |f| %>
            
            <!-- Service Search -->
            <div class="flex-1 relative">
              <%= f.text_field :q, 
                  value: params[:q],
                  placeholder: "What service do you need?",
                  class: "w-full px-4 py-3 text-lg border-0 focus:ring-0 focus:outline-none rounded-md",
                  list: "services-list" %>
              
              <datalist id="services-list">
                <% @service_options.each do |option| %>
                  <option value="<%= option.last %>"><%= option.first %></option>
                <% end %>
              </datalist>
            </div>

            <!-- Location Search -->
            <div class="flex-1 relative">
              <%= f.text_field :location, 
                  value: params[:location],
                  placeholder: "Enter your location",
                  class: "w-full px-4 py-3 text-lg border-0 focus:ring-0 focus:outline-none rounded-md border-l border-gray-200",
                  list: "locations-list" %>
              
              <datalist id="locations-list">
                <% @location_options.each do |option| %>
                  <option value="<%= option.last %>"><%= option.first %></option>
                <% end %>
              </datalist>
            </div>

            <%= f.submit "Search", 
                class: "bg-blue-600 hover:bg-blue-700 text-white px-8 py-3 rounded-md font-semibold text-lg transition-colors cursor-pointer" %>
          <% end %>
        </div>
        
        <!-- Search hints -->
        <div class="text-center mt-3">
          <p class="text-sm text-gray-500">
            üí° Type to see suggestions ‚Ä¢ Select from dropdown ‚Ä¢ Free text also works
          </p>
        </div>
      </div>

    <!-- Search Results -->
    <% if @search_performed %>
      <% if @services.any? %>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          <% @services.each do |service| %>
            <div class="bg-white rounded-xl shadow-lg border border-gray-200 overflow-hidden hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
              <!-- Service Header -->
              <div class="bg-gradient-to-r from-blue-500 to-purple-600 px-6 py-4">
                <h3 class="text-xl font-bold text-white truncate">
                  <%= highlight(service.name, @query) %>
                </h3>
                <p class="text-white text-opacity-90 text-sm">
                  <%= service.category.humanize %> ‚Üí <%= service.subcategory.humanize %>
                </p>
              </div>
              
              <!-- Service Content -->
              <div class="p-6">
                <!-- Price -->
                <div class="text-right mb-4">
                  <span class="text-3xl font-bold text-green-600">Rs. <%= service.price %></span>
                </div>
                
                <!-- Description -->
                <% if service.description.present? %>
                  <p class="text-gray-600 text-sm mb-4 line-clamp-3">
                    <%= highlight(truncate(service.description, length: 120), @query) %>
                  </p>
                <% end %>
                
                <!-- Location -->
                <div class="flex items-center text-sm text-gray-500 mb-4">
                  <svg class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                  <%= highlight(service.location, @location) %>
                </div>
                
                <!-- Provider Info -->
                <div class="flex items-center mb-4 pb-4 border-b border-gray-200">
                  <div class="bg-blue-100 rounded-full p-2 mr-3">
                    <svg class="h-5 w-5 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                    </svg>
                  </div>
                  <div>
                    <p class="text-sm font-medium text-gray-900"><%= service.provider.full_name %></p>
                    <p class="text-xs text-gray-500">Service Provider</p>
                  </div>
                </div>
                
                <!-- Action Buttons -->
                <div class="flex space-x-3">
                  <%= link_to "View Details", service_path(service),
                      class: "flex-1 bg-blue-600 hover:bg-blue-700 text-white text-center py-2 px-4 rounded-lg font-medium transition-colors" %>
                  <%= link_to "Book Now", new_service_booking_path(service),
                      class: "flex-1 bg-green-600 hover:bg-green-700 text-white text-center py-2 px-4 rounded-lg font-medium transition-colors" %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <!-- No Results Found -->
        <div class="text-center py-16">
          <div class="max-w-md mx-auto">
            <svg class="mx-auto h-16 w-16 text-gray-300 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
            <h3 class="text-2xl font-semibold text-gray-900 mb-2">No services found</h3>
            <p class="text-gray-600 mb-6">
              We couldn't find any services matching your search. Try adjusting your search terms or exploring our categories.
            </p>
            
            <!-- Suggestions -->
            <div class="bg-blue-50 rounded-lg p-4 mb-6">
              <h4 class="font-semibold text-blue-900 mb-2">Search Tips:</h4>
              <ul class="text-sm text-blue-800 text-left space-y-1">
                <li>‚Ä¢ Try different keywords or spellings</li>
                <li>‚Ä¢ Use broader location terms</li>
                <li>‚Ä¢ Check for typos in your search</li>
                <li>‚Ä¢ Browse categories below</li>
              </ul>
            </div>
            
            <div class="space-y-3">
              <%= link_to "Browse All Services", root_path, 
                  class: "inline-block bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg font-medium transition-colors" %>
              <%= link_to "View Categories", categories_path, 
                  class: "inline-block bg-gray-600 hover:bg-gray-700 text-white px-6 py-3 rounded-lg font-medium transition-colors ml-3" %>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <!-- Initial state - no search performed -->
      <div class="text-center py-16">
        <h3 class="text-xl font-semibold text-gray-900 mb-2">Start your search above</h3>
        <p class="text-gray-600">Enter a service name or browse our categories to find what you need</p>
      </div>
    <% end %>
  </div>
</div>