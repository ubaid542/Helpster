
<div class="bg-gray-50 min-h-screen">
  <!-- Header Section -->
  <div class="bg-white shadow-sm">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <div class="flex items-center mb-4">
        <%= link_to categories_path, class: "text-blue-600 hover:text-blue-700 mr-4" do %>
          ‚Üê Back to Categories
        <% end %>
      </div>
      <div class="text-center">
        <h1 class="text-4xl font-bold text-gray-900 mb-4"><%= @category_name %> Services</h1>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          Choose the specific type of <%= @category_name.downcase %> service you need.
        </p>
      </div>
    </div>
  </div>

  <!-- Subcategories Grid -->
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @subcategories.each do |subcategory| %>
        <%= link_to subcategory_services_path(@category, subcategory[:slug]), 
            class: "group bg-white rounded-lg shadow-md hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1 p-6 border border-gray-200" do %>
          <div>
            <h3 class="text-xl font-semibold text-gray-900 mb-3 group-hover:text-blue-600 transition-colors">
              <%= subcategory[:name] %>
            </h3>
            <p class="text-gray-600 mb-4 leading-relaxed">
              <%= subcategory[:description] %>
            </p>
            <div class="flex items-center justify-between">
              <span class="text-blue-600 text-sm font-medium group-hover:text-blue-700">
                View Services
              </span>
              <svg class="w-5 h-5 text-blue-600 group-hover:text-blue-700 transform group-hover:translate-x-1 transition-transform" 
                   fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>

  <!-- Help Section -->
  <div class="bg-blue-50 py-12">
    <div class="max-w-4xl mx-auto text-center px-4 sm:px-6 lg:px-8">
      <h2 class="text-2xl font-bold text-gray-900 mb-4">Need help choosing?</h2>
      <p class="text-lg text-gray-600 mb-6">
        Not sure which <%= @category_name.downcase %> service you need? Our experts can help you find the right professional.
      </p>
      <button class="bg-blue-600 text-white px-6 py-3 rounded-md font-medium hover:bg-blue-700 transition-colors">
        Get Expert Advice
      </button>
    </div>
  </div>
</div>

