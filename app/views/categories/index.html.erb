<div class="bg-gray-100 min-h-screen">
  <!-- Header Section -->
  <div class="bg-white shadow-sm">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <div class="text-center">
        <h1 class="text-4xl font-bold text-gray-900 mb-4">Browse Services</h1>
        <p class="text-xl text-gray-600 mb-6 max-w-2xl mx-auto">
          Find the perfect professional for your project. Choose from our wide range of service categories.
        </p>
        <% if user_signed_in? && current_user.is_a?(Client) %>
        
            <%= link_to "View Your Bookings", client_dashboard_path, class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
        
        <% end %>
      </div>
    </div>
  </div>

  <!-- Categories Grid -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
      
      <!-- Electrician -->
      <%= link_to category_subcategories_path('electrician'), class: "group bg-white rounded-xl shadow-md hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2 p-6 border border-gray-100" do %>
        <div class="text-center">
          <div class="bg-yellow-100 group-hover:bg-yellow-200 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4 transition-colors">
            <svg class="w-8 h-8 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2 group-hover:text-yellow-600 transition-colors">Electrician</h3>
          <p class="text-sm text-gray-600">Electrical repairs, installations, wiring, and safety inspections</p>
          <div class="mt-4 text-yellow-600 text-sm font-medium group-hover:text-yellow-700">
            View Services →
          </div>
        </div>
      <% end %>

      <!-- Plumber -->
      <%= link_to category_subcategories_path('plumber'), class: "group bg-white rounded-xl shadow-md hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2 p-6 border border-gray-100" do %>
        <div class="text-center">
          <div class="bg-blue-100 group-hover:bg-blue-200 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4 transition-colors">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2 group-hover:text-blue-600 transition-colors">Plumber</h3>
          <p class="text-sm text-gray-600">Pipe repairs, drain cleaning, fixture installation, and emergency services</p>
          <div class="mt-4 text-blue-600 text-sm font-medium group-hover:text-blue-700">
            View Services →
          </div>
        </div>
      <% end %>

      <!-- House Cleaner -->
      <%= link_to category_subcategories_path('house-cleaner'), class: "group bg-white rounded-xl shadow-md hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2 p-6 border border-gray-100" do %>
        <div class="text-center">
          <div class="bg-green-100 group-hover:bg-green-200 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4 transition-colors">
            <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2-2v0"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2 group-hover:text-green-600 transition-colors">House Cleaner</h3>
          <p class="text-sm text-gray-600">Professional house cleaning, deep cleaning, and maintenance services</p>
          <div class="mt-4 text-green-600 text-sm font-medium group-hover:text-green-700">
            View Services →
          </div>
        </div>
      <% end %>

      <!-- Mechanic -->
      <%= link_to category_subcategories_path('mechanic'), class: "group bg-white rounded-xl shadow-md hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2 p-6 border border-gray-100" do %>
        <div class="text-center">
          <div class="bg-red-100 group-hover:bg-red-200 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4 transition-colors">
            <svg class="w-8 h-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2 group-hover:text-red-600 transition-colors">Mechanic</h3>
          <p class="text-sm text-gray-600">Auto repair, maintenance, diagnostics, and emergency roadside assistance</p>
          <div class="mt-4 text-red-600 text-sm font-medium group-hover:text-red-700">
            View Services →
          </div>
        </div>
      <% end %>

      <!-- Carpenter -->
      <%= link_to category_subcategories_path('carpenter'), class: "group bg-white rounded-xl shadow-md hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2 p-6 border border-gray-100" do %>
        <div class="text-center">
          <div class="bg-amber-100 group-hover:bg-amber-200 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4 transition-colors">
            <svg class="w-8 h-8 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2 group-hover:text-amber-600 transition-colors">Carpenter</h3>
          <p class="text-sm text-gray-600">Custom woodwork, furniture making, repairs, and installation services</p>
          <div class="mt-4 text-amber-600 text-sm font-medium group-hover:text-amber-700">
            View Services →
          </div>
        </div>
      <% end %>

      <!-- Painter -->
      <%= link_to category_subcategories_path('painter'), class: "group bg-white rounded-xl shadow-md hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2 p-6 border border-gray-100" do %>
        <div class="text-center">
          <div class="bg-purple-100 group-hover:bg-purple-200 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4 transition-colors">
            <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zM7 3H5a2 2 0 00-2 2v12a4 4 0 004 4h2a2 2 0 002-2V5a2 2 0 00-2-2H7zM9 9h6l-6 6V9z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2 group-hover:text-purple-600 transition-colors">Painter</h3>
          <p class="text-sm text-gray-600">Interior and exterior painting, wall preparation, and decorative finishes</p>
          <div class="mt-4 text-purple-600 text-sm font-medium group-hover:text-purple-700">
            View Services →
          </div>
        </div>
      <% end %>

      <!-- Gardener -->
      <%= link_to category_subcategories_path('gardener'), class: "group bg-white rounded-xl shadow-md hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2 p-6 border border-gray-100" do %>
        <div class="text-center">
          <div class="bg-emerald-100 group-hover:bg-emerald-200 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4 transition-colors">
            <svg class="w-8 h-8 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2 group-hover:text-emerald-600 transition-colors">Gardener</h3>
          <p class="text-sm text-gray-600">Lawn care, landscaping, tree services, and garden maintenance</p>
          <div class="mt-4 text-emerald-600 text-sm font-medium group-hover:text-emerald-700">
            View Services →
          </div>
        </div>
      <% end %>

    </div>
  </div>

  <!-- Call to Action -->
  <div class="bg-blue-600 py-16">
    <div class="max-w-4xl mx-auto text-center px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-white mb-4">Can't find what you're looking for?</h2>
      <p class="text-xl text-blue-100 mb-8">
        Tell us about your project and we'll connect you with the right professionals.
      </p>
      <button class="bg-white text-blue-600 px-8 py-3 rounded-md font-semibold text-lg hover:bg-gray-100 transition-colors">
        Post Your Project
      </button>
    </div>
  </div>
</div>
 