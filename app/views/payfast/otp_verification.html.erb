<div class="max-w-md mx-auto p-6 bg-white rounded-lg shadow-md">
  <h2 class="text-2xl font-bold mb-6">Enter OTP</h2>
  
  <p class="mb-4 text-blue-600">OTP has been sent to your registered mobile number.</p>

  <%= form_with url: payfast_verify_otp_path, method: :post, local: true do |form| %>
    <%= form.hidden_field :booking_id, value: @booking.id %>
    
    <div class="mb-4">
      <%= form.label :otp, "OTP:", class: "block mb-2" %>
      <%= form.text_field :otp, placeholder: "123456", maxlength: 6, class: "w-full p-2 border rounded text-center", required: true %>
    </div>
    
    <div class="bg-yellow-100 p-4 rounded mb-4">
      <p><strong>Test OTP:</strong> 123456</p>
    </div>
    
    <div class="flex gap-4">
      <%= form.submit "Complete Payment", class: "bg-green-600 text-white px-6 py-2 rounded" %>
      <%= link_to "Cancel", client_dashboard_path, class: "bg-gray-500 text-white px-6 py-2 rounded" %>
    </div>
  <% end %>
</div>