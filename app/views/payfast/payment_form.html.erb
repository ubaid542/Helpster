<div class="max-w-2xl mx-auto p-6 bg-white rounded-lg shadow-md">
  <h2 class="text-2xl font-bold mb-6">PayFast Payment</h2>
  
  <div class="mb-6 p-4 bg-gray-100 rounded">
    <p><strong>Service:</strong> <%= @booking.service.name %></p>
    <p><strong>Date:</strong> <%= @booking.date %></p>
    <p><strong>Amount:</strong> Rs. <%= number_with_delimiter(@booking.price.to_i) %></p>
  </div>

  <%= form_with url: payfast_process_payment_path, method: :post, local: true do |form| %>
    <%= form.hidden_field :booking_id, value: @booking.id %>
    
    <div class="mb-4">
      <%= form.label :bank_code, "Bank:", class: "block mb-2" %>
      <%= form.select :bank_code, [['Demo Bank', 'DEMO']], { prompt: "Select Bank" }, { class: "w-full p-2 border rounded", required: true } %>
    </div>
    
    <div class="mb-4">
      <%= form.label :account_number, "Account Number:", class: "block mb-2" %>
      <%= form.text_field :account_number, placeholder: "12353940226802034243", class: "w-full p-2 border rounded", required: true %>
    </div>
    
    <div class="mb-4">
      <%= form.label :cnic_number, "CNIC Number:", class: "block mb-2" %>
      <%= form.text_field :cnic_number, placeholder: "4210131315089", class: "w-full p-2 border rounded", required: true %>
    </div>
    
    <div class="mb-4">
      <%= form.label :customer_mobile_no, "Mobile Number:", class: "block mb-2" %>
      <%= form.text_field :customer_mobile_no, value: @booking.client.phone_number, class: "w-full p-2 border rounded", required: true %>
    </div>
    
    <div class="bg-yellow-100 p-4 rounded mb-4">
      <p><strong>Test Details:</strong></p>
      <p>Account: 12353940226802034243</p>
      <p>CNIC: 4210131315089</p>
    </div>
    
    <div class="flex gap-4">
      <%= form.submit "Proceed to Payment", class: "bg-green-600 text-white px-6 py-2 rounded" %>
      <%= link_to "Cancel", client_dashboard_path, class: "bg-gray-500 text-white px-6 py-2 rounded" %>
    </div>
  <% end %>
</div>